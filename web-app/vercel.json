{
    "version": 2,
    "name": "networkbuster-staging",
    "alias": ["staging.networkbuster.net"],
    "builds": [
        { "src": "**/*.html", "use": "@vercel/static" },
        { "src": "**/*.css", "use": "@vercel/static" },
        { "src": "**/*.js", "use": "@vercel/static" }
    ],
    "routes": [
        { "src": "/about", "dest": "/about.html" },
        { "src": "/projects", "dest": "/projects.html" },
        { "src": "/technology", "dest": "/technology.html" },
        { "src": "/documentation", "dest": "/documentation.html" },
        { "src": "/contact", "dest": "/contact.html" },
        { "src": "/flash-commands", "dest": "/flash-commands.html" },
        { "src": "/packages", "dest": "/packages.html" },
        { "src": "/hud", "dest": "/hud.html" },
        { "src": "/overlay", "dest": "/overlay.html" },
        { "src": "/recycle", "dest": "/recycle.html" },
        { "handle": "filesystem" },
        { "src": "/(.*)", "dest": "/index.html" }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                { "key": "X-Environment", "value": "staging" },
                { "key": "X-Frame-Options", "value": "DENY" },
                { "key": "X-Content-Type-Options", "value": "nosniff" }
            ]
        }
    ],
    "env": {
        "NODE_ENV": "staging",
        "SITE_URL": "https://staging.networkbuster.net"
    }
}
